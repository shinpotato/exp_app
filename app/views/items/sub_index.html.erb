<h2><%= flash[:notice] %></h2>

<h1>投稿一覧</h1>
<% if user_signed_in? %>
  <% @items.each do |item| %>
    <p><%= item.user.nickname.present? ? "投稿者　#{item.user.nickname}" : "会員No.#{item.user.id}" %>
    <p><%= @lang_hash[item.language] %>：<%= item.keyword %>：<%= @exp_categ_hash[item.exp_category] %></p>
    <p><%= item.exp_detail %></p>
  <% end %>
<% else %>
  <p>ログインしてください</p>
<% end %>

<!-- フィルタリングを行うための検索窓 -->
<input class="form-control" id="myInput" type="text" placeholder="検索">

<!-- テーブル -->
<table class="table table-striped">
  <thead class="bg-danger text-white">
    <tr>
      <th>ジャンル</th>
      <th>キーワード</th>
      <th>カテゴリー</th>
      <th>内容</th>
    </tr>
  </thead>
  <tbody id="myTable">
    <tr>
      <td>HTML/CSS</td>
      <td>Webサイトの画面を作るための言語</td>
      <td>Webサイトの画面を作るための言語</td>
      <td>Webサイトの画面を作るための言語</td>
    </tr>
    <tr>
      <td>Ruby</td>
      <td>Webサイトの裏側の処理をする言語</td>
    </tr>
    <tr>
      <td>Python</td>
      <td>人工知能を開発するための言語</td>
    </tr>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>
