
<!-- フィルタリングを行うための検索窓 -->
<input class="form-control" id="myInput" type="text" placeholder="検索">

<!-- テーブル -->
<table class="table table-striped">
  <thead class="bg-danger text-white">
    <tr>
      <th>投稿者</th>
      <th>ジャンル</th>
      <th>キーワード</th>
      <th>カテゴリー</th>
      <th>内容</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="myTable">
    <% @user.items.order(created_at: :desc).each do |item| %>
      <tr>
        <td><%= item.user.nickname.present? ? "#{item.user.nickname}" : "会員No.#{item.user.id}" %></td>
        <td><%= @lang_hash[item.language] %></td>
        <td><%= item.keyword %></td>
        <td><%= @exp_categ_hash[item.exp_category] %></td>
        <td><%= item.exp_detail %></td>
        <td><%= link_to "削除", item_path(item), method: :delete, data: {confirm:"削除しますか？"} %></td>
        <td><%= link_to "編集", edit_item_path(item), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<script>
$(document).ready(function(){
$("#myInput").on("keyup", function() {
  var value = $(this).val().toLowerCase();
  $("#myTable tr").filter(function() {
    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
  });
});
});
</script>
